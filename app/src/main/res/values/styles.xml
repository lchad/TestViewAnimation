<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="guide_btn">
        <item name="android:layout_width">135dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="enter_button_style" parent="BaseButtonStyle">
        <item name="android:background">@drawable/btn_enter_selector</item>
        <item name="android:textColor">@color/btn_enter_text</item>
    </style>

    <style name="BaseButtonStyle">
        <item name="android:layout_width">@dimen/btn_width</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textSize">17sp</item>
    </style>

</resources>
